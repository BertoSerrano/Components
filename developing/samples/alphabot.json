#configuracion del nodo
{
   "NODE":{
      "name":"alphabot",
      "path":"/home/pi/pyro4bot/developing/node",
      #"path":"/home/pi/td/developing/node",
      "etc":"<path>/etc",
      "path_cls":["services","sensors"],
      "ethernet":"wlan0",
      #"ethernet":"eth0",
      "name_server":true,
      "port_ns":9090,
      "port_node":4040,
      "start_port":5050,
      "def_frec":0.03,
      "def_worker":true
    },
   "services":{
        "camera":{"cls":"picam","ethernet":"<ethernet>","framerate":25,"width":320,"height":240,"frec":0.02,"worker_run":true,"enable":true},
        "gpioservice":{"cls":"gpioservice","gpio_mode":"BCM","frec":0.02,"enable":true,"worker_run":false,"mode":"local"},
        "i2cservice":{"cls":"i2cservice","-->":["gpioservice"],"frec":0.02,"enable":true,"worker_run":false,"mode":"local"}
   },
   "sensors":{
        "l298n":{"cls":"l298n","ENA":13,"IN1":19,"IN2":26,"IN3":16,"IN4":20,"ENB":12,"BASE":[0,0],"-->":["gpioservice"],"frec":0.03, "enable":true,"worker_run":true},
        "leds":{"cls":"scrollleds","address":60,"-->":["i2cservice"],"frec":0.03, "enable":false,"worker_run":true}
    }
}
