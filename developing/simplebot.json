#configuracion del nodo
#test master
{
   "NODE":{
      "name":"simplebot",
      "path":"/home/paco/Dropbox/td/developing/nodeRBB",
      #"path":"/home/pi/td/developing/nodeRBB",
      "etc":"<path>/etc",
      "path_cls":["SERVICES","ROBOT"],
      "ethernet":"wlp3s0",
      #"ethernet":"enp0s25",
      #"ethernet":"eth0",
      "port_ns":9090,
      "port_node":4040,
      "start_port":6000,
      "def_frec":0.08,
      "def_worker":true
    },
   "SERVICES":{
        "camera":{"cls":"usbcam","framerate":25,"width":320,"height":200,"frec":0.01,"worker_run":true,"enable":true},
        "arduino":{"cls":"usbsimulator","comPort":"/dev/ttyS0","comPortBaud":115200,"frec":0.01,"mode":"local","enable":true}
   },
   "ROBOT":{
        "laser":{"cls":"laser","LASER":[0,0],"-->":["arduino"],"enable":true,"frec":0.02},
        "infrared":{"cls":"infrared","IR":[0,0,0,0],"-->":["arduino"],"enable":true,"frec":0.02,"enable":true},
        "base":{"cls":"basemotion","MOTORS":[0,0],"-->":["arduino"],"frec":0.03, "enable":true},
        "pantilt":{"cls":"pantilt","PT":[90,90],"-->":["arduino"],"frec":0.03, "enable":true},
        "face":{"cls":"face","-->":["botface.face","laser"],"frec":0.03, "enable":true}
    }
}
